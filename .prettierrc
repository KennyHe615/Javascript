{
   "printWidth": 128,
   "tabWidth": 3,
   "useTabs": false,
   "semi": true,
   "singleQuote": true,
   "trailingComma": "all",
   "arrowParens": "always",
   "bracketSpacing": true,
   "bracketSameLine": false,
   "quoteProps": "as-needed",
   "endOfLine": "auto",
   "proseWrap": "preserve",
   "singleAttributePerLine": true,
   "objectWrap": "preserve",
   "overrides": [
      {
         "files": "*.md",
         "options": {
            "proseWrap": "always"
         }
      },
      {
         "files": [
            "*.yml",
            "*.yaml"
         ],
         "options": {
            "singleQuote": false
         }
      }
   ]
}
